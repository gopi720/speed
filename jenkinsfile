@Library('speed') _
pipeline{
  agent any
  parameters{
    choice choices: ['create', 'delete'], description: 'choose create or delete', name: 'action'
  }
  tools{
    maven 'maven'
  }
  stages{
    stage("scm checkout"){
      when{ expression{ params.action == "create"} }
      steps{
        gitcheckout(
          branch: "main",
          url: "https://github.com/gopi720/speed.git"
        )
      }
    }
    stage("maven test"){
      when{ expression{ params.action == "create"} }
      steps{
        mavenTest()
      }
    }
    stage("maven integration"){
      when{ expression{ params.action == "create"} }
      steps{
        mvnintegrationtest()
      }
    }
    stage("code analysis"){
      when{ expression{ params.action == "create"} }
      steps{
        staticCodeanalysis()
      }
    }
  }
}

